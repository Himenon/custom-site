{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "experimentalDecorators": true,
    "removeComments": true,
    "composite": true,
    "sourceMap": false,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "paths": {
      "gray-matter": [
        "./typings/gray-matter/index.d.ts"
      ],
      "@babel/*": [
        "./typings/@babel/*"
      ],
      "@mdx-js/*": [
        "./typings/@mdx-js/*"
      ]
    },
  },
  "include": [
    "src/index.ts",
    "src/cli.ts",
    "src/**/*.ts",
    "typings/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./lib",
    "jest"
  ],
  "ordered-imports": [
    true,
    {
      "import-sources-order": "any",
      "named-imports-order": "case-insensitive"
    }
  ]
}