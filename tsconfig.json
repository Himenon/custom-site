{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "noLib": false,
    "allowUnusedLabels": true,
    "declaration": true
  },
  "typeRoots": [
    "./src/typings",
    "./node_modules/@types"
  ],
  "paths": {
    "gray-matter": [
      "./src/typings/gray-matter" 
    ],
    "@babel/*": [
      "./src/typings/@babel/*"
    ],
    "@mdx-js/*": [
      "./src/typings/@mdx-js/*"
    ],
    "@rocu/*": [
      "./src/typings/@rocu/*"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "ordered-imports": [
    true,
    {
      "import-sources-order": "any",
      "named-imports-order": "case-insensitive"
    }
  ]
}